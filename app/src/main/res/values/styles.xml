<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorTertiary</item>
    </style>

    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="AppButton.Tonal" parent="Widget.Material3.Button.Tonal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="AppButton.Outlined" parent="Widget.Material3.Button.Outlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="AppToolbar" parent="Widget.Material3.Toolbar" />

    <!-- State dot styles -->
    <style name="StateDot">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="StateDot.Success" parent="StateDot">
        <item name="android:background">@drawable/online_indicator</item>
    </style>

    <style name="StateDot.Warning" parent="StateDot">
        <item name="android:background">@drawable/warning_indicator</item>
    </style>

    <style name="StateDot.Error" parent="StateDot">
        <item name="android:background">@drawable/offline_indicator</item>
    </style>

    <style name="StateDot.Info" parent="StateDot">
        <item name="android:background">@drawable/info_indicator</item>
    </style>
</resources>
